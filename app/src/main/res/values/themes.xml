<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.V21.Theme.QualificationVK" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

<!--    My theme-->
    <style name="TextAppearance.QualificationVK.Light" parent="Base.V21.Theme.QualificationVK">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center_vertical|center</item>
    </style>
    <style name="TextAppearance.QualificationVK.Normal" parent="Base.V21.Theme.QualificationVK">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">50sp</item>
        <item name="android:gravity">center_vertical|center</item>
    </style>
</resources>